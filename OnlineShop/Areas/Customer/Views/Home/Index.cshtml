@using OnlineShop.Models;
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Products>

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .paginationn {
        display: inline-block;
      background-color:cornflowerblue;
      
    }
    
</style>

<br />
<br />
<body style="background-color:antiquewhite">

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">
                            <label style=" font-size: 23px; color: steelblue">@product.Name</label>
                        </h4>
                    </div>
                    <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height: 250px" ; />
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <label style="font-size: 20px;color: blue"><b>Price : @product.Price</b></label>
                            </div>
                            <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-success pull-right">Deatils</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="paginationn">
        <a>  @Html.PagedListPager(Model, c => Href("~/Customer/Home/Index?page=" + c), PagedListRenderOptionsBase.OnlyShowFivePagesAtATime)</a>
    </div>
</body>

