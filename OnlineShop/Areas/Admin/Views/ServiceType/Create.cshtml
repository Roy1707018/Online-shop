@model OnlineShop.Models.ServiceTypes
@{
    ViewData["Title"] = "Create";
}
<br />

<h2 class="text-info">Create Service Type</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType" class="form-control" />
            </div>
            <span asp-validation-for="ServiceType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); /* to prevent the save button from going server side */}
}

